{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {"url": "https://raw.githubusercontent.com/slim0090/FIT3179-Data-Visualisation-2/main/data/world_population.csv"},  
    "repeat": [
        "Population",
        "2020_Population",
        "2015_Population",
        "2010_Population",
        "2000_Population",
        "1990_Population",
        "1980_Population",
        "1970_Population"
      ],
      "columns": 2,
      "spec": {
          "layer": [{
                "mark":"bar",
                "encoding": {
                    "x": {
                        "field": "Continent", 
                        "type": "nominal",
                        "axis": null
                    },
                    "y": {
                        "field": {"repeat": "repeat"},
                        "aggregate": "sum",
                        "title": "Population"
                    },
                    "color": {
                        "field": "Continent"
                    },
                    "tooltip": [{
                        "field": "Continent", 
                        "type": "nominal"
                    },
                    {
                        "field": {"repeat": "repeat"},
                        "type": "quantitative",
                        "title": "Population",
                        "format": ","
                    }
                    ]
                }
          },
          {
                "data": {
                "values": [
                {
                    "Population": "Year: 2022",
                    "2020_Population": "Year: 2020",
                    "2015_Population": "Year: 2015",
                    "2010_Population": "Year: 2010",
                    "2000_Population": "Year: 2000",
                    "1990_Population": "Year: 1990",
                    "1980_Population": "Year: 1980",
                    "1970_Population": "Year: 1970"
                }
                ]},
                "mark": {
                    "type": "text",
                    "align": "right",
                    "baseline": "bottom",
                    "x": "width",
                    "y": 0
                },
                "encoding": {"text": {"field": {"repeat": "repeat"}}}
                }
          
        ]
      }
}

